{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/spec",
    "module": "commonjs",
    "target": "es5",
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/e2e/*.ts",
    "**/*.e2e-spec.ts",
    "**/*.po.ts",
    "node_modules",
    "tmp",
    "jest/*.ts"
  ]
}
